#include <iostream>
using namespace std;

int main() 
{
	int i,n;
	cin>>n;
	for(i=0;i<n;++i)
	{
	    int j,k,arr[k],temp=0;
	    cin>>k;
	    for(j=0;j<k;j++)
	    {
	        cin>>arr[j];
	        if (arr[j]<arr[j+1])
	        {
	            temp=temp+1;
	        }
	    }
	    
	    if (temp==0)
	    {
	        cout<<k<<endl;
	    }
	    else 
	    {
	        cout<<k-1<<endl;
	    }
	}
}
