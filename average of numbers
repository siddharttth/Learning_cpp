#include <iostream>
using namespace std;

int main() 
{
    int arr[50],n,i;
    cout<<"enter number of elements : ";
    cin>>n;
    
    //taking input of numbers in an array
    for(i=0;i<n;i++)
    {
        cout<<"enter "<<"number "<<i+1<<" : ";
        cin>>arr[i];
    }
    
    //finding the sum of the numbers
    float sum=0;
    for(i=0;i<n;++i)
    {
        sum=(sum+arr[i]);
    }
    
    //finding the average of the sum
    float avrg;
    avrg=(sum/2);
    cout<<"the average of the numbers are : "<<avrg;
}
